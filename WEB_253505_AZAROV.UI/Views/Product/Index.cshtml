@using WEB_253505_AZAROV.Domain.Entities;
@using WEB_253505_AZAROV.Domain.Models;
@using Microsoft.AspNetCore.Mvc.ViewFeatures;
@model ListModel<Item>
@{
    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();
    string? category = request.Query["category"].ToString();
    int prev = Model.CurrentPage == 1
            ? 1
            : Model.CurrentPage - 1;
    int next = Model.CurrentPage == Model.TotalPages
            ? Model.TotalPages
            : Model.CurrentPage + 1;
}
<h1>Items</h1>
<!-- выбор категории -->
<div class="col-2 border-2">
    <ul class="nav ">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle"
                data-bs-toggle="dropdown"
                href="#"
                role="button"
                aria-expanded="false">@(ViewData["currentCategory"] ?? "Все")
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item"
                        asp-controller="product"
                        asp-route-category=@null>Все</a>
                </li>
                @foreach (var item in (ViewData["Categories"] as List<Category>)! )
                {
                    <li>
                        <a class="dropdown-item"
                            asp-controller="product"
                            asp-route-category="@item.NormalizedName">
                            @item.Name
                        </a>
                    </li>
                }
            </ul>
        </li>
    </ul>
</div><!-- выбор категории -->


@if (Model == null || !Model.Items.Any())
{
    <p>No items available.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var item in Model.Items)
    {
         <div class="col">
             <div class="card">
                <div class="card-body">
                    <img src="@item.ImageURI" class="card-img-top" alt="@item.Name">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">@item.Cost.ToString("C")</p>
                    <form asp-controller="Cart" asp-action="Add" method="get">
                        <input type="hidden" name="id" value=@item.Id />
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <button type="submit" class="btn btn-primary">Add to cart</button>
                    </form>
                </div>
             </div>
         </div>
    }
    </div>
}
@{
}
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
        <a class="page-link" asp-controller="product" asp-route-category="@category" asp-route-pageno="@prev" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
            <a class="page-link" asp-controller="product" asp-route-category="@category" asp-route-pageno="@i">@i</a>
        </li>
    }
    <li class="page-item">
        <a class="page-link" asp-controller="product" asp-route-category="@category" asp-route-pageno="@next" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
        </a>
    </li>
  </ul>
</nav>